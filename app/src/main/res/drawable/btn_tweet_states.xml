<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/colorAccent"  android:endColor="@color/colorAccent"  android:angle="90"/>
            <stroke android:width="1dp" android:color="@color/colorAccent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_active="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/colorButtonDisabled"  android:endColor="@color/colorButtonDisabled"  android:angle="90"/>
            <stroke android:width="1dp" android:color="@color/colorButtonDisabled"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>